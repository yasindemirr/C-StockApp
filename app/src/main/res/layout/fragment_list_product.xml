<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/list_backround_color"
    tools:context=".ui.ListProductFragment">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="@dimen/_10sdp"
        android:id="@+id/cToolbar"
        android:background="@color/toolbar_color">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C-STOK"
            android:textColor="@color/white"
            android:textSize="@dimen/_25ssp"
            android:textStyle="bold"
            android:layout_gravity="center">
        </TextView>
    </androidx.appcompat.widget.Toolbar>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cToolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_7sdp"
                android:id="@+id/info"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="@dimen/_10sdp"

                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/_105sdp"
                    android:layout_height="wrap_content"
                    android:text="Ürün kodu"
                    android:id="@+id/listProductName"
                    android:textColor="@color/item_text_color"
                    android:textSize="@dimen/_20ssp">
                </TextView>
                <TextView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:text="Adet"
                    android:id="@+id/listProductQuantity"
                    android:textColor="@color/item_text_color"
                    android:textSize="@dimen/_20ssp">
                </TextView>
                <TextView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:text="Fiyat"
                    android:id="@+id/listProductPrice"
                    android:textColor="@color/item_text_color"
                    android:textSize="@dimen/_20ssp">
                </TextView>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_5sdp"
                tools:listitem="@layout/list_item"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/info"
                android:id="@+id/cRec">
            </androidx.recyclerview.widget.RecyclerView>
            <com.getbase.floatingactionbutton.FloatingActionsMenu
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="@dimen/_16sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:fab_labelStyle="@style/custom_floating_bar"
                app:fab_addButtonPlusIconColor="@color/black"
                app:fab_addButtonColorPressed="@color/yellow"
                app:fab_addButtonColorNormal="@color/yellow"
                >
                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fab_colorNormal="@color/yellow"
                    app:fab_title="İrsaliye Oluştur"
                    app:fab_colorPressed="@color/yellow"
                    app:fab_icon="@drawable/bill"
                    android:id="@+id/bill">

                </com.getbase.floatingactionbutton.FloatingActionButton>
                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fab_colorNormal="@color/yellow"
                    app:fab_title="Ürün Oluştur"
                    app:fab_colorPressed="@color/yellow"
                    app:fab_icon="@drawable/adddd"
                    android:id="@+id/addProducT">

                </com.getbase.floatingactionbutton.FloatingActionButton>

            </com.getbase.floatingactionbutton.FloatingActionsMenu>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>











</androidx.constraintlayout.widget.ConstraintLayout>